<%- include('layout/header') %>
<div class="container">
    <div class="row my-6">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (projects.length > 0) { %>
                    <table class="table table-striped">
                        <thead>
                            <tr class="text-center table-dark">
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Logo</th>
                                <th>Active</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% projects.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.description %></td>
                                    <td><img src="<%= row.logo %>" width="50" class="img-thumbnail" alt=""></td>
                                    <td><%= row.active %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center">No Projects Found</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
